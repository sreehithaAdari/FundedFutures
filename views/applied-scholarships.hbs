}

.navbar {
  display: flex;
  gap: 20px;
}

.logo{
    font-size: 30px;
    font-weight: 600;
    letter-spacing: 1px;
    color: #F9B420;
    margin-left: 10px;
}


.fa-graduation-cap{
    width: auto;

}

.navbar a{
    position: relative;
    font-size: 15px;
    
    color: #F9B420;
    text-decoration: none;
    font-weight: 500;
    margin-left: 20px;
    border-radius: 3px;
    transition: ease .40s;
    padding: 5px 5px;
  
}

.navbar a:hover{
    
    background-color: #3a506b;
    color: var(--text-color);
    box-shadow: 10px 10px 30px rgba(211, 184, 10, 0.2) ;
