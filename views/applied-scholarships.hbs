}




</style>


     <header class="sticky">
  <a href="/home-stu" class="logo"><i class="fa-solid fa-graduation-cap"></i>FundedFutures</a>
  <div class="bx bx-menu" id="menu-icon"></div>
  <nav class="navbar">
    <a href="/home-stu">Home</a>
        <a href="/student-profile" > Scholarships</a>
      <a href="login">Logout</a>
  </nav>
</header>


<section class="applied-scholarships">
    <h2>Applied Scholarships</h2>
    {{#each appliedScholarships}}
        <div class="applied-scholarship">
            <h3>{{this.title}}</h3>
            <p>{{this.description}}</p>
            <p>Amount: {{this.amount}}</p>
        </div>
    {{/each}}
</section>
