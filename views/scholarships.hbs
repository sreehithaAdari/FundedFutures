<section class="scholarships" id="scholarships">
  <div class="main-container">
    <h2>Add Scholarship</h2>
    <form action="/add-scholarship" method="POST">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" required>

      <label for="description">Description:</label>
      <textarea id="description" name="description" rows="4" required></textarea>

      

      <label for="amount">Amount:</label>
      <input type="number" id="amount" name="amount" required>

     

      <!-- Add other scholarship details as needed -->

      <button type="submit">Add Scholarship</button>
    </form>
  </div>
</section>


<!-- scholarships.hbs -->
<section class="display-scholarships" id="display-scholarships">
    <div class="main-container">
        <h2>Scholarships</h2>
        <!-- Display scholarships data from the server -->
        <ul>
            {{#each scholarships}}
            <li>
                <h3>{{this.title}}</h3>
                <p>{{this.description}}</p>
                <p>Organizer Email: {{this.email}}</p>
                <p>Amount: {{this.amount}}</p>
                <!-- Display other scholarship details as needed -->
                <form action="/delete-scholarship" method="POST">
                    <input type="hidden" name="scholarshipId" value="{{this._id}}">
                    <button type="submit">Delete Scholarship</button>
                </form>
            </li>
            {{/each}}
        </ul>
    </div>
</section>

